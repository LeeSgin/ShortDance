<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideFeedbackFragment"
    android:background="#000000">

    <VideoView
        android:id="@+id/base_preview"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_gravity="center|left">

    </VideoView>

    <VideoView
        android:id="@+id/user_preview"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_gravity="center|right">

    </VideoView>

    <android.widget.Button
        android:id="@+id/repractice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top|right"
        android:layout_margin="16dp"
        android:backgroundTint="#31FF20"
        android:text="틀린부분 연습하기"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    <android.widget.Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top|left"
        android:layout_margin="16dp"
        android:backgroundTint="#31FF20"
        android:text="처음부터 다시하기"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</FrameLayout>