<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".GuideVerFragment">

    <!-- TODO: Update blank fragment layout -->


    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="16sp"
        android:background="@null"
        android:contentDescription="Back"
        android:src="@drawable/ic_back" />

    <!-- 타이틀 텍스트 -->
    <TextView
        android:id="@+id/title_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16sp"
        android:text="가이드 생성하기"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/guide_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:text="이 영상의 안무 가이드라인을 만들게요!"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        />

    <!-- 선택 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp">

        <!-- 빼대 버전 버튼 -->
        <LinearLayout
            android:id="@+id/bbaedae_version_button"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_unselected_bg"
            android:padding="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/bbaedae_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_bone"
                android:contentDescription="빼대 버전" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빼대 버전"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 실루엣 버전 버튼 -->
        <LinearLayout
            android:id="@+id/silhouette_version_button"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_unselected_bg"
            android:padding="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/silhouette_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_silhouette"
                android:contentDescription="실루엣 버전" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실루엣 버전"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- 다음으로 버튼 -->
    <android.widget.Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"

        android:text="다음으로"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@drawable/gradient_background"/>



</FrameLayout>